{
  "name": "video-to-srt",
  "version": "1.1.1",
  "description": "Offline Video to Subtitle Converter",
  "main": "main.js",
  "author": "Vossel",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "Vossel.VideotoSRTApp",
    "productName": "Video to SRT",
    "win": {
      "target": "appx",
      "icon": "icon.ico"
    },
    "appx": {
      "backgroundColor": "#1e1e1e",
      "identityName": "Vossel.VideotoSRTApp",
      "publisher": "CN=9388615D-DE7E-4BB0-BD77-146FD6574E9A",
      "publisherDisplayName": "Vossel"
    },
    "files": [
      "**/*",
      "!venv/**/*",
      "!backend/bin/**/*",
      "!logs/**/*",
      "!dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/bin",
        "to": "backend/bin"
      },
      {
        "from": "dist/engine",
        "to": "backend/engine"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}